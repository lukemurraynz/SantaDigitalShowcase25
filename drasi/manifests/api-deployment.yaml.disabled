---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: santa-api
  namespace: drasi-system
  labels:
    app: santa-api
spec:
  replicas: 2
  selector:
    matchLabels:
      app: santa-api
  template:
    metadata:
      labels:
        app: santa-api
    spec:
      containers:
      - name: api
        image: <ACR_NAME>.azurecr.io/santa-api:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 80
          name: http
        env:
        # Drasi Configuration
        - name: DRASI_QUERY_CONTAINER
          value: "default"
        
        # Azure Services
        - name: COSMOS_ENDPOINT
          value: "https://drasicrhsith-prod-cosmos.documents.azure.com:443/"
        - name: AZURE_OPENAI_ENDPOINT
          value: "https://drasicrhsith-prod-oai-74hjkh.openai.azure.com/"
        - name: AZURE_OPENAI_DEPLOYMENT_NAME
          value: "gpt-4.1"
        - name: EVENTHUB_FQDN
          value: "drasicrhsith-prod-eh.servicebus.windows.net"
        - name: EVENTHUB_NAME
          value: "wishlist-events"
        - name: KEYVAULT_URI
          value: "https://drasicrhsithprodkvn72hjd.vault.azure.net/"
        
        resources:
          requests:
            memory: "256Mi"
            cpu: "250m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        
        livenessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 30
          periodSeconds: 10
        
        readinessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 10
          periodSeconds: 5
      
      # Enable Azure workload identity for managed identity access
      serviceAccountName: santa-api-sa
---
apiVersion: v1
kind: Service
metadata:
  name: santa-api-svc
  namespace: drasi-system
  labels:
    app: santa-api
spec:
  type: ClusterIP
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
    name: http
  selector:
    app: santa-api
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: santa-api-sa
  namespace: drasi-system
  annotations:
    azure.workload.identity/client-id: "<MANAGED_IDENTITY_CLIENT_ID>"
  labels:
    azure.workload.identity/use: "true"
